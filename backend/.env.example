# Backend Environment Variables (copy to .env and fill values)
# MongoDB connection string (MongoDB Atlas or other)
MONGO_URI=mongodb+srv://<user>:<password>@<cluster-host>/<dbName>?retryWrites=true&w=majority

# Cohere API Key (https://dashboard.cohere.com/)
COHERE_API_KEY=your_cohere_api_key

# Unsplash Access Key (https://unsplash.com/developers)
UNSPLASH_KEY=your_unsplash_access_key

# Comma separated list of allowed origins for CORS (no spaces)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://secondary-frontend.example

# Rate limit configuration (requests per window for generation endpoints)
GEN_WINDOW_MINUTES=15
GEN_MAX_REQUESTS=10

# Optional explicit port (Render sets PORT automatically; keep for local dev)
PORT=5000
